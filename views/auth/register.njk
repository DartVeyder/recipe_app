{% extends "layout.njk" %}

{% block content %}
<div class="form-container">
    <h2>Реєстрація</h2>
    <form action="/auth/register" method="POST">
        <div class="form-group">
            <label for="username">Ім'я користувача</label>
            <input type="text" id="username" name="username" value="{{ old.username or '' }}">
            {% if errors.username %}<div class="error-text">{{ errors.username.msg }}</div>{% endif %}
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ old.email or '' }}">
             {% if errors.email %}<div class="error-text">{{ errors.email.msg }}</div>{% endif %}
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" id="password" name="password">
            {% if errors.password %}<div class="error-text">{{ errors.password.msg }}</div>{% endif %}
        </div>
        <div class="form-group">
            <label for="password2">Підтвердіть пароль</label>
            <input type="password" id="password2" name="password2">
            {% if errors.password2 %}<div class="error-text">{{ errors.password2.msg }}</div>{% endif %}
        </div>
        <button type="submit" class="btn">Зареєструватися</button>
    </form>
    <p>Вже маєте акаунт? <a href="/auth/login">Увійти</a></p>
</div>
{% endblock %}